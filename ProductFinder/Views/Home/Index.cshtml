@model ProductViewModel
@{
    ViewData["Title"] = "Home Page";
}


<div class="row">
    <div class="col-3">
        @using (Html.BeginForm())
        {
            <h4>
                <i class="indicator fa fa-caret-down" aria-hidden="true"></i> Processor
            </h4>
            <ul class="list-group">
                @for (int i = 0; i < Model.SearchParameter.ProcessorList.Count(); i++)
                {
                    var item = Model.SearchParameter.ProcessorList.ElementAt(i);
                    <li class="list-group-item">
                        <div class="radio">
                            <label>
                                @Html.HiddenFor(e => e.SearchParameter.ProcessorList[i].Value)
                                @Html.CheckBoxFor(e => e.SearchParameter.ProcessorList[i].Selected, Model.SearchParameter.ProcessorList.ElementAt(i).Value)
                                @item.Text
                            </label>
                        </div>
                    </li>
                }
            </ul>


            <h4>
                <i class="indicator fa fa-caret-down" aria-hidden="true"></i> RAM
            </h4>

            <ul class="list-group">
                @for (int i = 0; i < Model.SearchParameter.RamList.Count(); i++)
                {
                    var item = Model.SearchParameter.RamList.ElementAt(i);
                    <li class="list-group-item">
                        <div class="radio">
                            <label>
                                @Html.HiddenFor(e=> e.SearchParameter.RamList[i].Value)
                                @Html.CheckBoxFor(e => e.SearchParameter.RamList[i].Selected, Model.SearchParameter.RamList.ElementAt(i).Value)
                                @item.Text
                            </label>
                        </div>
                    </li>
                }
            </ul>

            <button type="submit">Filter</button>
        }
    </div>

    <!-- Search Results -->
    <div class="col-9">
        <table class="table table-responsive table-sm">
            <thead>
                <tr>
                    <td>Title</td>
                    <td>Price</td>
                    <td>Processor</td>
                    <td>RAM</td>
                    <td>Rating</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>@product.Title</td>
                        <td>@product.Price.ToString("C")</td>
                        <td>@product.ProcessorWord</td>
                        <td>@product.RAMWord</td>
                        <td>@product.Rating</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



